<?xml version="1.0" encoding="UTF-8"?>
<project name="SF-PACKAGE-CONFIG">
  <!-- location of this config -->
  <dirname property="sf.package.config.dir" file="${ant.file.SF-PACKAGE-CONFIG}"/>
  
  <!--
  * Property defaults
   -->

